{
    "java.configuration.updateBuildConfiguration": "interactive",
    "java.checkstyle.version": "10.21.4",
    "java.checkstyle.configuration": "/google_checks.xml",
    "[java]": {
      "editor.tabSize": 2,
      "editor.detectIndentation": false,
      "editor.insertSpaces": true
    },
    "editor.tabSize": 4,
    "java.debug.settings.onBuildFailureProceed": true // This allows tests to run even after checkStyle errors 
}