start patch Default
  # PATTERN: JOTR code block pattern
  # Mimics the exact pattern from stochastic_flowering.josh

  Trees.init = create 0 of Tree

  # JOTR-style .step handler with code block
  Trees.step = {
    # At year 2024, create initial population
    if (meta.year == 2024) {
      return create 10 of Tree
    }

    # For all other years: remove dead trees and add new ones
    const aliveTrees = prior.Trees[prior.Trees.state != "dead"]
    const newCount = 2 count
    const newTrees = create newCount of Tree
    return aliveTrees | newTrees
  }

  # Add the workaround .end handler
  Trees.end = prior.Trees

  # Export current collection (JOTR pattern)
  export.treeCount.step = count(Trees)
  export.meanAge.step = mean(Trees.age)

  log.step = debug(geoKey, "PATCH_STEP", "year:", meta.year, "treeCount:", count(Trees))
end patch

start organism Tree
  age.init = 0 years
  age.step = prior.age + 1 year

  state.init = "alive"
  state.step = prior.state  # Simplified - always alive

  log.step = debug(geoKey, "ORG_STEP", "age:", age, "state:", state, "year:", meta.year)
end organism

