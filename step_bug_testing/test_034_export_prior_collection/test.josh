start patch Default
  # PATTERN: export_prior_collection (CONTROL TEST)
  # Test if using PRIOR in exports avoids the bug
  # This is what JOTR does on line 175 for some exports

  Trees.init = create 0 of Tree
  Trees.step:if(meta.year == 1) = create 10 of Tree
  Trees.end = prior.Trees  # "Working" workaround

  # CRITICAL: Export that references PRIOR Trees (not current)
  # Hypothesis: This should work
  export.treeCount.step = count(prior.Trees)  # PRIOR, not current
  export.meanAge.step = mean(prior.Trees.age)  # PRIOR

  log.step = debug(geoKey, "PATCH_STEP", "year:", meta.year, "treeCount:", count(prior.Trees))
end patch

start organism Tree
  age.init = 0 years
  age.step = prior.age + 1 year

  log.step = debug(geoKey, "ORG_STEP", "age:", age, "year:", meta.year)
end organism

