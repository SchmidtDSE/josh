start simulation TestConfigDefaults
  grid.size = config test.gridSize else 1000 m
  grid.low = 33.7 degrees latitude, -115.4 degrees longitude
  grid.high = 34.0 degrees latitude, -116.4 degrees longitude
  grid.patch = "Default"
  
  steps.low = 0 count
  steps.high = config test.stepCount else 10 count
  
  exportFiles.patch = "memory://editor/patches"
end simulation

start patch Default
  Tree.init = create config test.treeCount else 5 count of Tree
  
  export.averageHeight.step = mean(Tree.height)
end patch

start organism Tree
  height.init = config test.initialHeight else 0 meters
  height.step = prior.height + config test.growthRate else 0.5 meters
end organism

start unit year
  alias years
  alias yr
  alias yrs
end unit